<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- MEDIUM FONT SIZE -->
    <style name="medium_title_text">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- LARGE FONT SIZE -->
    <style name="large_title_text">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appIcon">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>
    <style name="MenuSimCardIcon">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/ic_simcard</item>
    </style>

    <style name="MenuBatteryIcon">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/battery</item>
    </style>
</resources>
